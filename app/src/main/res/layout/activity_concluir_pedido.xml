<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="com.example.rafaelaranda.pruebahogazarustica.ConcluirPedidoActivity">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bienvenida"
    android:text="Gracias por su compra, en unos momentos nos pondremos contacto con usted para definir los detalles de la entrega"
    android:textSize="15dp"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/bienvenida"
    android:layout_marginTop="15dp"
    android:id="@+id/line1">
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/nuevo"
      android:text="Nuevo \nPedido"
      />
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/regresar"
      android:layout_marginLeft="10dp"
      android:text="Volver al\nInicio"/>
  </LinearLayout>


</RelativeLayout>
