  <TextView android:id="@+id/lblLatitud"
    android:layout_below="@+id/map"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Latitud: " />

  <TextView android:id="@+id/lblLongitud"
    android:layout_below="@+id/lblLatitud"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Longitud: " />

  <ToggleButton android:id="@+id/actualizar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lblLongitud"
    android:textOn="Parar actualizaciones"
    android:textOff="Iniciar actualizaciones" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="cielo: "
    android:id="@+id/cielo"
    android:layout_above="@+id/actualizar"
    android:layout_toRightOf="@+id/lblLatitud"
    android:layout_toEndOf="@+id/lblLatitud" />

